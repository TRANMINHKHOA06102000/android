<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textSize="30sp"
            android:textColor="#000000"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">
            <EditText
                android:drawableLeft="@drawable/ic_username"
                android:layout_weight="2"
                android:hint="User Name"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:id="@+id/password"
                android:drawableLeft="@drawable/ic_userpass"
                android:layout_weight="2"
                android:layout_below="@+id/username"
                android:hint="Pass Words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <Button
            android:textColor="#ffff"
            android:layout_marginTop="5dp"
            android:id="@+id/signinbt"
            android:background="@drawable/roundbutton"
            android:text="Sign In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/btgmail"
            android:textColor="#ffff"
            android:text="Gmail"
            android:background="@drawable/gmailbt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signinbt"
            android:layout_marginTop="10dp"></Button>
        <Button
            android:id="@+id/fbbt"
            android:layout_alignParentRight="true"
            android:textColor="#ffff"
            android:text="FaceBook"
            android:background="@drawable/fbbt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signinbt"
            android:layout_marginTop="10dp"></Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/fg"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffd57e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password ?"></TextView>
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/fg"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#7E7676"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont have account ? sign up"></TextView>
    </RelativeLayout>
</LinearLayout>