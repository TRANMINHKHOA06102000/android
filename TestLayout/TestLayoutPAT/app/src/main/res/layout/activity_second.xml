<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#32e0c4">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#ffff">
            </TextView>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="20sp"
                android:textColor="#ffff">
            </TextView>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:textColor="#ffff">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView
                android:layout_centerInParent="true"
                android:textSize="40sp"
                android:textStyle="bold"
                android:id="@+id/name"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pham Anh Tu"></TextView>
            <TextView
                android:layout_below="@+id/name"
                android:id="@+id/slogan"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dead Inside"
                android:textSize="20sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:background="@drawable/option">
            <Button
                android:id="@+id/postbt"
                android:textStyle="bold"
                android:text="Post"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/roundbutton"
                ></Button>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="60dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/postbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Header"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_marginLeft="40dp"></TextView>
                    <TextView
                        android:textColor="#000"
                        android:layout_marginLeft="40dp"
                        android:text="Này ông, tôi không biết mọi người thấy meme này như thế nào, nhưng đối với tôi"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_username"></ImageView>
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#838383" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Header"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_marginLeft="40dp"></TextView>
                    <TextView
                        android:textColor="#000"
                        android:layout_marginLeft="40dp"
                        android:text="Này ông, tôi không biết mọi người thấy meme này như thế nào, nhưng đối với tôi"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_username"></ImageView>
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#838383" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Header"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_marginLeft="40dp"></TextView>
                    <TextView
                        android:textColor="#000"
                        android:layout_marginLeft="40dp"
                        android:text="Này ông, tôi không biết mọi người thấy meme này như thế nào, nhưng đối với tôi"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_username"></ImageView>
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#838383" />
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/inguser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/circle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user"></ImageView>
</RelativeLayout>